<h1>Login</h1>
<form action="" method="post">
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="text"
      name="email"
      class="form-control"
      placeholder="Enter Email ..."
      required
    />
  </div>
  <div class="mb-3">
    <label for="">Password</label>
    <input
      type="password"
      name="password"
      class="form-control"
      placeholder="Enter Password ..."
      required
    />
  </div>

  <div class="d-grid">
    <button type="submit" class="btn btn-primary">Login</button>
  </div>
  <div class="d-grid">
    <a href="http://localhost:3000/login/google/redirect" class="btn btn-danger mt-3"
      >Login with Google</a
    >
  </div>
</form>
